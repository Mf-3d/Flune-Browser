{
  "name": "flune_browser",
  "version": "1.0.0",
  "description": "Hello New Moon.",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "npx electron .",
    "start:dev": "npx electron . --dev",
    "build:mac": "npx electron-builder --mac --x64",
    "build:win": "npx electron-builder --win --x64 --dir"
  },
  "keywords": [],
  "author": "mf7cli <mf7cli120@icloud.com>",
  "build": {
    "appId": "ml.mf7cli.flune",
    "productName": "Flune Browser",
    "files": [
      "!.git",
      "!.dist",
      "node_modules",
      "src",
      "main.js",
      "package-lock.json",
      "package.json"
    ],
    "mac": {
      "target": "dmg",
      "icon": "src/icon.png"
    },
    "win": {
      "target": "nsis",
      "icon": "src/icon.png"
    }
  },
  "dependencies": {
    "electron-context-menu": "^3.1.2",
    "electron-store": "^8.0.1"
  },
  "devDependencies": {
    "electron": "^17.0.0",
    "electron-builder": "^22.14.5"
  }
}
