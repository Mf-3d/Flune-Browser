{
  "name": "flune-browser",
  "version": "2.5.0",
  "description": "Welcome to the next stage.",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "npx electron .",
    "build:mac": "npx electron-builder --mac --x64",
    "build:mac_arm": "npx electron-builder --mac --arm64",
    "build:mac_universal": "npx electron-builder --mac --universal",
    "build:win": "npx electron-builder --win --x64 --dir",
    "build:all": "npm run build:win && npm run build:mac && npm run build:mac_universal"
  },
  "keywords": [],
  "author": "mf7cli",
  "build": {
    "appId": "tk.mf7cli.flune",
    "productName": "Flune-Browser",
    "files": [
      "!.git",
      "!.dist",
      "node_modules",
      "src",
      "main.js",
      "package-lock.json",
      "package.json",
      "preload",
      "Extension",
      "main"
    ],
    "asar": false,
    "mac": {
      "target": "dmg",
      "icon": "src/icon.png"
    },
    "win": {
      "target": "nsis",
      "icon": "src/icon.png"
    }
  },
  "devDependencies": {
    "electron": "^19.0.9",
    "electron-builder": "^23.1.0"
  },
  "dependencies": {
    "discord-rpc": "^4.0.1",
    "electron-log": "^4.4.7",
    "electron-store": "^8.0.2",
    "eslint": "^8.19.0",
    "request": "^2.88.2",
    "uuid": "^8.3.2",
    "xml2js": "^0.4.23"
  }
}
